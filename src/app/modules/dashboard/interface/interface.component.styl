#interface
  background-color: grey
  width: 100%
  min-height: 100vh
  position: relative

  nav
    position: absolute
    top: 0
    left 0
    min-height: 100%
    width: 250px
    background-color: grey
    color: #f1ece9
    border-left: solid 5px #4c301b
    box-shadow: 0 0 7px 0 rgba(0, 0, 0, 0.2)

    h1
      width: 170px
      display: table
      margin: 20px auto

    #avatar
      margin: 0 auto 30px
      display: table
      text-align: center

      img
        width 120px
        border: solid 3px red
        border-radius: 50%

      #name-user
        font-weight: bold
        font-size: 1.2em

      #name-email
        font-size: .8em

    ul>li>a
      display: table
      padding: 10px
      margin-left: -5px
      width: calc(100% + 5px)
      border-left: transparent 5px solid

      &:hover:not(.active)
        background-color: rgba(111, 73, 44, .5);
        border-color: #9b4d12
        color: blue
        i
          color: blue
      &.active
        background-color: blue
        color: #fbf9f8
        border-color: blue
        i
          color: blue
          font-weight: bold

      &>i
        width: 1.5em
        text-align: center
        color: #4c301b
        font-size: 1.4em
        vertical-align: middle

  &>div
    flex: auto
    min-height: 100vh
    width: calc(100% - 250px)
    margin: 0 0 0 auto
    position relative
    z-index 2
    background: local_grocery_store
    transition: .5s width

    header
      width: 100%
      padding: 10px
      background: blue
      box-shadow: 0 0 7px 0 rgba(0, 0, 0, 0.2)
      margin-bottom: 10px
      display: flex
      justify-content: space-between

    main
      padding: 10px

  &.hide-menu>div
    width: 100%
